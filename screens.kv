Screenmanager:
    Signup:
    Login:
    Main:

<Signup>:

    name:"signup"

    MDCard:
        size_hint:None,None
        size:300,550
        pos_hint:{"center_x":0.5,"center_y":0.5}
        elevation:5
        padding:25
        spacing:25
        orientation:'vertical'

        Image:
            source : "assests/logo.png"
            size_hint:None,None
            width:'80dp'
            height:'80dp'
            pos_hint:{"center_x":0.5,"center_y":0.5}
            
    
        
            

        MDTextField:
            hint_text:'Username'
            icon_right:'account'
            size_hint_x:None
            size_hint_y:None
            width:200
            height:5
            font_size:12
            pos_hint:{'center_x':0.5}
        
        MDTextField:
            hint_text:'Email'
            icon_right:'email'
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{'center_x':0.5}
        
        MDTextField:
            hint_text:'Password'
            icon_right:'eye-off'
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{'center_x':0.5}
            password:True

        MDTextField:
            hint_text:'Confirm Password'
            icon_right:'eye-off'
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{'center_x':0.5}
            password:True

        MDRoundFlatButton:
            text:'Sign Up'
            font_size:12
            pos_hint:{'center_x':0.5}
            on_release:app.root.current = "login"


<Login>:

    name:"login"

    MDCard:
        size_hint:None,None
        size:300,400
        pos_hint:{"center_x":0.5,"center_y":0.5}
        elevation:5
        padding:25
        spacing:25
        orientation:'vertical'

        Image:
            source : "assests/logo.png"
            size_hint:None,None
            width:'100dp'
            height:'100dp'
            pos_hint:{"center_x":0.5,"center_y":0.5}
            
    
        
            

        MDTextField:
            hint_text:'Username'
            icon_right:'account'
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{'center_x':0.5}
        
        MDTextField:
            hint_text:'Password'
            icon_right:'eye-off'
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{'center_x':0.5}
            password:True

        MDRoundFlatButton:
            text:'Log In'
            font_size:12
            pos_hint:{'center_x':0.5}
            on_release:app.root.current= "main"


<Main>:

    name:"main"

    BoxLayout:
        orientation:'vertical'
        padding:25
        size:root.width,root.height

        BoxLayout:
            orientation:'horizontal'
            padding:25
            size:root.width,root.height

            Image:
                source : "assests/photo.png"
                pos_hint:{"center_x":0.5,"center_y":0.5}

            Image:
                source : "assests/video.png"
                pos_hint:{"center_x":0.5,"center_y":0.5}

            Image:
                source : "assests/mood.png"
                pos_hint:{"center_x":0.5,"center_y":0.5}

        BoxLayout:
            orientation:'horizontal'
            padding:25
            size:root.width,root.height

            Image:
                source : "assests/memo.png"
                pos_hint:{"center_x":0.5,"center_y":0.5}

            Image:
                source : "assests/medication.png"
                pos_hint:{"center_x":0.5,"center_y":0.5}

            Image:
                source : "assests/task.png"
                pos_hint:{"center_x":0.5,"center_y":0.5}
        
        